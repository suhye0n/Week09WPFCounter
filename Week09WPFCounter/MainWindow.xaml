<Window x:Class="Week09WPFCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week09WPFCounter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/bg.jpg" TileMode="Tile" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="BtnAdd" Content="눌러주세요" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" FontSize="24" Click="OnAdd"/>
        <TextBlock x:Name="TxtCount" HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap" Text="안녕하세요" VerticalAlignment="Top" FontSize="36" Background="#FFEEB8CC" TextAlignment="Center" Width="300"/>

    </Grid>
</Window>
